<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.E_commercee" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.E_commercee" parent="Base.Theme.E_commercee" />

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">#DFDED5</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item> <!-- Mettre en gras -->
    </style>
    <style name="operatorbutton" parent="commonbutton">
        <item name="android:textColor">@color/btnBackground2</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="operatorbutton2" parent="commonbutton2">
        <item name="android:textColor">@color/btnBackground2</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Theme.TP1_CALCUL" parent="Base.Theme.E_commercee" />

    <style name="digitbutton" parent="commonbutton">
        <item name="background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="commonbutton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="digitbutton2" parent="commonbutton2">
        <item name="background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="commonbutton2" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">sans-serif</item>
    </style>

    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>